{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "path/to/file.ts"], // Add a file or directory path here
  "exclude": ["node_modules"]
}