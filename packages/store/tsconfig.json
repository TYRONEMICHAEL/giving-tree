{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}